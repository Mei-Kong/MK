	.dk{
		width:75%;
		min-width:300px;
		height:800px;
		background: rgba(0,0,0,0.4);
		display:inline-table;
		position: relative;
		top:30px;
		left:13%;
		right:auto;
		padding:15px;
		}
	.zk{
		width:250px;
		height:390px;
		background:#FF004F;
		position: absolute;
		float:right;
		right: 20px;
		z-index: 1;
		border: double rgba(0,0,0,0.7) 8px;
		margin: 10px;
		}
	.zkxk{
		width:250px;
		height:0px;
		position:absolute;
		top:102%;
		background: rgba(0,0,0,0.22);
		transition:height 0.7s ease;
		overflow:hidden;
		font-size: 1.5em;
		text-align: center;
		}
	.zk:hover .zkxk{
		height:70px;
	}
	.divone{
		min-width:950px;
		width: 100%;
		background: rgba(255,255,255,0.9);
